<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <!-- EF Core for PerformanceDbContext -->
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.10" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.10" />

    <!-- YamlDotNet for PlayerYamlService -->
    <PackageReference Include="YamlDotNet" Version="12.0.2" />

    <!-- MaxMind for geolocation -->
    <PackageReference Include="MaxMind.GeoIP2" Version="4.0.0" />
  </ItemGroup>

  <!-- If you want to skip the RCON folder, you can exclude it:
  <ItemGroup>
    <Compile Remove="BytexDigital.BattlEye.Rcon\**" />
  </ItemGroup>
  -->

</Project>
